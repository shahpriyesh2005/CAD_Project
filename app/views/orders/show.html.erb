<table class="table table-striped">
  <tbody>
    <tr>
      <td>
      <p>
        <strong>Event:</strong>
        <%= Event.find(@order.event_id).title %>
      </p>
      </td>
      <td>
      <p>
        <strong>Ticket:</strong>
        <%= Ticket.find(@order.ticket_id).ticket_type %>
      </p>
      </td>
      <td>
      <p>
        <strong>No of Tickets:</strong>
        <%= @order.no_of_tickets %>
      </p>
      </td>
      <td>
      <p>
        <strong>Ticket Price:</strong>
        <%= @order.ticket_price %>
      </p>
      </td>
      <td>
      <p>
        <strong>Fees per Ticket:</strong>
        <%= @order.fees_per_ticket %>
      </p>
      </td>
    </tr>
    <tr>
      <td>
      <p>
        <strong>Total Ticket Price:</strong>
        <%= @order.total_ticket_price %>
      </p>
      </td>
      <td>
      <p>
        <strong>Total fees:</strong>
        <%= @order.total_fees %>
      </p>
      </td>
      <td>
      <p>
        <strong>Currency:</strong>
        <%= @order.currency %>
      </p>
      </td>
      <td>
      <p>
        <strong>Guest First Name:</strong>
        <%= @order.guest_first_name %>
      </p>
      </td>
      <td>
        <p>
          <strong>Guest Last Name:</strong>
          <%= @order.guest_last_name %>
        </p>
      </td>
    </tr>
    <tr>
      <td>
      <p>
        <strong>Guest Email:</strong>
        <%= @order.guest_email %>
      </p>
      </td>
      <td>
      <p>
        <strong>Guest Contact No:</strong>
        <%= @order.guest_contact_no.to_i %>
      </p>
      </td>
      <td>
      <p>
        <strong>Payment Method:</strong>
        <%= @order.payment_method %>
      </p>
      </td>
      <td>
      <p>
        <strong>Card No:</strong>
        <%= @order.card_no %>
      </p>
      </td>
      <td>
      <p>
        <strong>Order date:</strong>
        <%= @order.order_date.strftime("%d/%m/%Y") %>
      </p>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to 'Back', orders_path %>
